    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex justify-left flex-col items-left min-h-screen md:flex-row">
    <%- include('partials/navBar.ejs') %>

    <!-- Main Content -->
<main class="flex-1 p-4 sm:p-6 md:p-8 lg:p-10 bg-gray-100 ">

    <!-- Greeting Section -->
    <div class="flex  md:flex-row justify-between items-top mb-6">
      <div class="mb-4 md:mb-0">
        <h1 class="text-xl sm:text-2xl lg:text-3xl font-bold"><%= greeting %>, Ariel</h1>
        <p class="text-gray-600 text-sm hidden sm:text-base md:block lg:text-lg ">Have a fruitful day ahead! ðŸŒ¸</p>
      </div>
      
      <div class="flex items-center justify-center gap-4 h-fit text-xl font-semibold">
        <h1 class="text-center hidden md:block" >Sagar Institute of Science<br> and Technology</h1>
        <img src="/images/SISTec_Logo.png" class="h-18 w-16 object-fit object-center" alt="">
      </div>
    </div>
  
        <!-- Image Section -->
      
<!-- Weather Section -->
<div class="bg-white h-[18vw] p-8 rounded-lg shadow-lg  w-full md:flex items-center justify-between gap-24 overflow-hidden">

  
  <div class="text-center w-1/2 mb-4">
    <% if (weather) { %>
      <img src="<%= weatherImage %>" alt="Weather Icon" class="mx-auto mb-2 w-16 h-16">
      <div class="text-3xl font-semibold mb-2"><%= weather.main.temp %>Â°C</div>
      <div class="text-lg font-medium text-gray-600"><%= weather.weather[0].description %></div>
      <div class="text-sm text-gray-500 mt-2">
        <%= weather.name %>, <%= weather.sys.country %>
      </div>
      <% } else { %>
        <p class="text-red-500">Unable to fetch weather data.</p>
        <% } %>
      </div>
      
  <!-- Time Section -->
  <!-- <div class="text-center mb-4">
    <div id="time" class="text-2xl font-semibold mt-4"><%= currentTime %></div>
  </div> -->
  
  <div class="img-container h-fit w-1/2 ">
    <img class="object-center object-fit w-[60%] h-[30%] mt-[-6vw]" src="/images/user.gif" alt="">
  </div>

</div>
    <!-- image section end -->

    <!-- Dashboard Cards -->
    <div class="flex flex-col sm:flex-row sm:flex-wrap lg:flex-nowrap gap-6">
  
      <!-- Task List (Open) -->
      <div class="flex-1 bg-white shadow-md rounded-lg p-4 sm:p-6 lg:p-8 w-full sm:w-[48%] lg:w-[30%]">
        <h3 class="text-lg flex gap-2 items-center justify-center sm:text-xl font-semibold mb-4">Pending Submission <img class="h-6 w-6" src="/images/Pending.png" alt=""> </h3>
        <div class="space-y-4">
          <div class="p-4 bg-blue-100 rounded-lg">
            <h4 class="font-semibold">1: OOPs</h4>
            <p class="text-sm sm:text-base text-gray-600">Due: 12/06/2020</p>
          </div>
          <div class="p-4 bg-blue-100 rounded-lg">
            <h4 class="font-semibold">2: Java</h4>
            <p class="text-sm sm:text-base text-gray-600">Due: 31/06/2020</p>
          </div>
          <div class="p-4 bg-blue-100 rounded-lg">
            <h4 class="font-semibold">3: EEE</h4>
            <p class="text-sm sm:text-base text-gray-600">Due: 11/07/2020</p>
          </div>
        </div>
      </div>
  
      <!-- History -->
      <div class="flex-1 bg-white shadow-md rounded-lg p-4 sm:p-6 lg:p-8 w-full sm:w-[48%] lg:w-[30%]">
        <h3 class="text-lg flex items-center justify-center gap-2 sm:text-xl font-semibold mb-4">History <img class="h-6 w-6" src="/images/History.png" alt=""></h3>
        <p class="text-gray-700 bg-blue-100 p-4 mb-4 rounded-lg text-sm sm:text-base lg:text-lg">
          In hac habitasse platea. Date: 12/06/2020
        </p>
        <p class="text-gray-700 bg-blue-100 p-4 mb-4 rounded-lg text-sm sm:text-base lg:text-lg">
          In hac habitasse platea. Date: 02/08/2020
        </p>
        <p class="text-gray-700 bg-blue-100 p-4 mb-4 rounded-lg text-sm sm:text-base lg:text-lg">
          In hac habitasse platea. Date: 18/06/2020
        </p>
      </div>
  
      <!-- Status -->
      <div class="flex-1 bg-white shadow-md rounded-lg p-4 sm:p-6 lg:p-8 w-full lg:w-[30%]">
        <h3 class="text-lg sm:text-xl font-semibold mb-4">Status</h3>
        <div class="flex justify-between items-center">
          <p class="font-bold text-base sm:text-lg lg:text-xl">In Progress</p>
          <p class="text-sm text-gray-500">5 days left</p>
        </div>
        <div class="mt-4 text-sm text-gray-600">
          <p>Due Date: 12/06/2020</p>
        </div>
      </div>
      
      
  
  </main>
  
  <script>
    function updateTime() {
      const now = new Date();
      const hours = now.getHours().toString().padStart(2, '0');
      const minutes = now.getMinutes().toString().padStart(2, '0');
      const seconds = now.getSeconds().toString().padStart(2, '0');
      document.getElementById('time').textContent = `${hours}:${minutes}:${seconds}`;
    }

    setInterval(updateTime, 1000);
    updateTime();
  </script>
</body>
</html>
