  <!-- JavaScript for Sidebar Toggle, Dropdowns, Dark Mode, and Auto-Scroll -->
  <script>
    const darkModeToggle = document.getElementById('darkModeToggle');
    const body = document.body;
    const form = document.getElementById('feedbackForm');
    const progressBar = document.getElementById('progressBar');
    const feedbackDiv = document.getElementById('feedbackDiv');
    const inputs = form.querySelectorAll('input[type="radio"]');
    const answeredQuestions = new Set();
    const submitBtn = document.getElementById('submitBtn');
    const questionTable = document.getElementById('questionTable');

    // Define question limit for auto-scrolling
    const scrollLimit = 2; // Adjust this value based on your requirement

    // Toggle dark mode
    darkModeToggle.addEventListener('click', () => {
      body.classList.toggle('dark-mode');
    });

    // Update progress and auto-scroll to the next question
    inputs.forEach((input) => {
      input.addEventListener('change', () => {
        if (answeredQuestions.has(input.name)) return; // Already answered this question
        answeredQuestions.add(input.name); // Mark question as answered
        updateProgress();
        autoScrollToNext();
      });
    });

    // Function to update progress bar
    function updateProgress() {
      const totalQuestions = 10; // Update this if you change the number of questions
      const percentage = (answeredQuestions.size / totalQuestions) * 100;
      progressBar.style.width = percentage + '%';
    }

    // Function to auto-scroll to the next question
    function autoScrollToNext() {
      const totalQuestions = questionTable.querySelectorAll('tr').length;

      // Only auto-scroll if the number of questions exceeds the scroll limit
      if (totalQuestions > scrollLimit) {
        // Find the last answered question
        const lastAnswered = form.querySelector('input[type="radio"]:checked').closest('tr');
        const nextQuestion = lastAnswered.nextElementSibling;

        if (nextQuestion) {
          // Smoothly scroll the form to the next question
          nextQuestion.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }
      }
    }

    // Submit button functionality
    submitBtn.addEventListener('click', () => {
      if (answeredQuestions.size < 10) { // Adjust to match the number of questions
        alert('Please complete all questions before submitting.');
      } else {
        alert('Feedback submitted successfully!');
        // Reset the form
        form.reset();
        answeredQuestions.clear();
        progressBar.style.width = '0%';
      }
    });

    // Function to toggle the dropdown menu
    function toggleDropdown(dropdownId) {
      const dropdown = document.getElementById(dropdownId);
      dropdown.classList.toggle('show'); // Toggle the 'show' class
    }
  </script>
