<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student Profile</title>
  <link rel="stylesheet" href="/css/styles.css">
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    /* Tailwind Purge Directive: Ensure dynamic classes are picked up */
    @layer base {
      .menu-hidden {
        display: none;
      }
    }
  </style>
</head>
<body class="bg-gray-100 font-sans">

  <div class="min-h-screen flex flex-col md:flex-row">
    <!-- Sidebar -->
    <aside class="bg-gray-900 flex flex-col px-4 py-6 md:px-10 md:py-10 items-start justify-top gap-4 md:gap-10 w-full md:w-64 text-white space-y-6">

      <!-- Dashboard and Hamburger for Small Screens -->
      <div class="flex justify-between w-full md:hidden">
        <div class="text-xl font-bold">Dashboard</div>
        <button id="menuToggle" class="text-white focus:outline-none">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>

      <!-- Full Navigation Menu -->
      <nav id="menu" class="space-y-2 md:space-y-3 w-full hidden md:block">
        <a href="#" class="flex items-center space-x-3 text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md">
          <span class="text-lg">üè†</span>
          <span>Home</span>
        </a>
        <a href="#" class="flex items-center space-x-3 text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md">
          <span class="text-lg">üìä</span>
          <span>Dashboard</span>
        </a>
        <a href="#" class="flex items-center space-x-3 text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md">
          <span class="text-lg">üë§</span>
          <span>Profile</span>
        </a>
        <a href="#" class="flex items-center space-x-3 text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md">
          <span class="text-lg">‚öôÔ∏è</span>
          <span>Settings</span>
        </a>

        <!-- Logout Button in Navigation -->
        <div class="w-full mt-4">
          <a href="#" class="flex items-center space-x-3 text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md">
            <span class="text-lg">üö™</span>
            <span>Logout</span>
          </a>
        </div>
      </nav>
    </aside>

    <!-- Main Content -->
    <div class="flex-grow p-4 md:p-6">
      <!-- Top Bar -->
      <header class="flex justify-between items-center mb-6">
        <h1 class="text-2xl md:text-3xl font-semibold">Student Profile</h1>
        <div class="flex items-center space-x-4">
          <span class="text-sm text-gray-600">User_Name</span>
          <img class="h-8 w-8 md:h-10 md:w-10 rounded-full object-cover" src="https://images.unsplash.com/photo-1522075469751-3a6694fb2f61?q=80&w=2080&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Profile Image">
        </div>
      </header>

      <!-- Profile Card -->
      <div class="bg-white p-4 md:p-6 rounded-lg shadow-md">
        <h2 class="text-lg md:text-xl font-semibold mb-4">Student Information</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6">
          <div>
            <p class="text-gray-600">Name</p>
            <h3 class="text-base md:text-lg font-bold">John Doe</h3>
          </div>
          <div>
            <p class="text-gray-600">Student ID</p>
            <h3 class="text-base md:text-lg font-bold">#123456789</h3>
          </div>
          <div>
            <p class="text-gray-600">Department</p>
            <h3 class="text-base md:text-lg font-bold">Computer Science</h3>
          </div>
          <div>
            <p class="text-gray-600">Year</p>
            <h3 class="text-base md:text-lg font-bold">Third</h3>
          </div>
        </div>
      </div>

      <!-- Feedback Section -->
      <div class="mt-4 md:mt-6 bg-white p-4 md:p-6 rounded-lg shadow-md">
        <h2 class="text-lg md:text-xl font-semibold mb-4">Your Recent Feedback</h2>
        <div class="space-y-4">
          <div class="flex justify-between">
            <p>Feedback for: Software Engineering</p>
            <span class="text-green-500 font-bold">4.5/5</span>
          </div>
          <div class="flex justify-between">
            <p>Feedback for: Data Structures</p>
            <span class="text-green-500 font-bold">4.8/5</span>
          </div>
          <div class="flex justify-between">
            <p>Feedback for: Computer Networks</p>
            <span class="text-green-500 font-bold">4.2/5</span>
          </div>
        </div>
      </div>

      <!-- Feedback History -->
      <div class="mt-4 md:mt-6 bg-white p-4 md:p-6 rounded-lg shadow-md overflow-x-auto">
        <h2 class="text-lg md:text-xl font-semibold mb-4">Feedback History</h2>
        <table class="table-auto w-full text-left border-collapse min-w-full md:min-w-0">
          <thead class="bg-gray-100 text-gray-700 uppercase text-sm">
            <tr>
              <th class="px-4 py-2">Course</th>
              <th class="px-4 py-2">Instructor</th>
              <th class="px-4 py-2">Rating</th>
              <th class="px-4 py-2">Date</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="border px-4 py-2">Software Engineering</td>
              <td class="border px-4 py-2">Dr. Smith</td>
              <td class="border px-4 py-2">4.5/5</td>
              <td class="border px-4 py-2">August 2023</td>
            </tr>
            <tr>
              <td class="border px-4 py-2">Data Structures</td>
              <td class="border px-4 py-2">Prof. Johnson</td>
              <td class="border px-4 py-2">4.8/5</td>
              <td class="border px-4 py-2">July 2023</td>
            </tr>
            <tr>
              <td class="border px-4 py-2">Computer Networks</td>
              <td class="border px-4 py-2">Dr. Adams</td>
              <td class="border px-4 py-2">4.2/5</td>
              <td class="border px-4 py-2">June 2023</td>
            </tr>
          </tbody>
        </table>
      </div>

    </div>
  </div>

  <script>
    // JavaScript to toggle the navigation menu visibility on small screens
    const menuToggle = document.getElementById('menuToggle');
    const menu = document.getElementById('menu');

    menuToggle.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  </script>

</body>
</html>
